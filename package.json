{
  "name": "md-viewer",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:css && npm run build:html && npm run build:js",
    "build:css": "sass styles/main.scss dist/styles.css --no-source-map",
    "build:css:watch": "sass styles/main.scss dist/styles.css --watch",
    "build:html": "mkdir -p dist && cp index.html dist",
    "build:js": "esbuild --bundle --define:Version='\"r1\"' --loader:.js=jsx --minify --outfile=dist/scripts.js src/index.js",
    "build:js:watch": "npm run build:js -- --watch"
  },
  "devDependencies": {
    "esbuild": "^0.14.5",
    "sass": "^1.45.0"
  },
  "dependencies": {
    "highlight.js": "^11.3.1",
    "idb-keyval": "^6.1.0",
    "markdown-it": "^12.3.0",
    "punycode": "^2.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
